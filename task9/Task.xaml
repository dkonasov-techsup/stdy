<Window x:Class="task9.Task"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task9"
        mc:Ignorable="d"
        Title="Task Information" Height="200" Width="400" WindowStartupLocation="CenterScreen" Initialized="Window_Initialized" SizeToContent="Height">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Name="taskText" Grid.Column="0" Text="" FontSize="14" Foreground="#FF6A6A6A" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Padding="20"/>
    </Grid>
</Window>