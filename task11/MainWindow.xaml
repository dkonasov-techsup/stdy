<Window x:Class="task11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task11"
        mc:Ignorable="d"
        Title="Task11" Height="450" Width="800">
    <Grid>        
        <RichTextBox Name="TextArea" HorizontalAlignment="Left" Height="384" Margin="10,25,0,0" VerticalAlignment="Top" Width="772" SelectionChanged="TextArea_SelectionChanged">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ComboBox Name="FontList" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="FontList_SelectionChanged"/>
        <ComboBox Name="FontSizeList" HorizontalAlignment="Left" Margin="130,3,0,0" VerticalAlignment="Top" Width="49" SelectionChanged="FontSizeList_SelectionChanged"/>
        <Button Content="About" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="179,3,0,0" Height="22"/>
        <Button Content="Task Info" HorizontalAlignment="Left" Margin="254,3,0,0" VerticalAlignment="Top" Width="76" Height="22"/>     
        
    </Grid>
</Window>
